---
import Tag from "../../components/tag";
import Layout from "../../layouts/Layout.astro";
import { contentfulClient } from "../../lib/contentful";

const entries = await contentfulClient.getTags({});

const tags = entries.items.map((item) => item.sys.id);
---

<Layout title="Tags">
    <div class="flex space-y-4 flex-col border-l-indigo-200 border-l-4 rounded-md border shadow-sm bg-white p-5">
        <h1 class="text-gray-700 text-xl w-full border-b pb-1 flex space-x-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#b5cff9" class="w-5 h-5 mt-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
              </svg>              
            <span>Tags</span>
        </h1>
        <div class="flex justify-between">
            <div class="flex flex-wrap gap-3">
                {tags.map((tag) => <Tag tag={tag} />)}
            </div>
        </div>
    </div>
</Layout>
