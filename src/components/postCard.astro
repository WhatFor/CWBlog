---
import classNames from "classnames";
import type { ContentlessPost } from "../lib/contentful";
import PostInfo from "./postInfo";
import Tag from "./tag";
import { Image } from "@astrojs/image/components";

interface Props {
  post: ContentlessPost;
}

const { post } = Astro.props;
---

<div>
  {
    post.coverImageUrl && (
      <div class="hidden max-h-72 lg:block">
        <a href={"/blog/" + post.slug}>
          {/*
                Weird dimensions, but ultimately done to 
                match the maximum display size of the image on desktop.
          */}
          <Image
            src={post.coverImageUrl}
            alt={post.coverImageAlt ?? ""}
            width={925}
            height={286}
            fit="cover"
            format="webp"
            class="h-72 w-full bg-gray-700 shadow lg:rounded-t-md"
          />
        </a>
      </div>
    )
  }
  <div
    class={classNames(
      "w-full flex flex-col bg-gray-800 shadow border border-gray-700",
      "lg:border-l-gray-700 lg:border-l-4 lg:rounded-md px-6 lg:px-8 py-5 lg:py-7",
      post.coverImageUrl ? "lg:rounded-t-none lg:rounded-b-4" : "lg:rounded-md"
    )}
  >
    <PostInfo
      className="mb-3"
      authorName={post.author.name}
      ttr={post.ttr}
      date={post.date.toLocaleString("default", {
        day: "numeric",
        month: "short",
        year: "numeric",
      })}
    />
    <a
      class="text-2xl font-bold text-gray-200 hover:underline"
      href={`/blog/${post.slug}/`}
    >
      {post.title}
    </a>
    <p class="mt-3 mb-4 text-gray-300">
      {post.description}
    </p>
    <div class="flex justify-between">
      <div class="flex space-x-3">
        {post.tags.map((tag) => <Tag tag={tag} />)}
      </div>
    </div>
  </div>
</div>
